<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <size android:height="35dp" android:width="230dp"/>
            <gradient android:angle="135" android:endColor="@color/primaryColor" android:startColor="@color/primaryLightColor" />
            <corners android:radius="50dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item >
        <shape>
            <size android:height="35dp" android:width="230dp"/>
            <gradient android:angle="135" android:endColor="@color/primaryColor" android:centerColor="@color/primaryLightColor" android:startColor="@color/primaryLightColor" />
            <corners android:radius="50dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/space_md"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_xxs"
        android:background="@color/bg_white_dark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTurma"
            style="@style/textLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/space_xxs"
            android:paddingLeft="@dimen/space_xxs"
            android:paddingTop="@dimen/space_xxs"
            android:text=""
            android:textColor="@color/textWhiteLight"
            android:textStyle="bold" />

        <TextView
            style="@style/textLight"
            android:id="@+id/tvCodTurma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:paddingRight="@dimen/space_xxs"
            android:paddingLeft="@dimen/space_xxs"
            android:paddingBottom="@dimen/space_xxs"
            android:text=""
            android:textColor="@color/textWhiteLight" />

    </LinearLayout>

</RelativeLayout>
